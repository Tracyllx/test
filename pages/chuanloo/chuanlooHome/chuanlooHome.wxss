page {
    width: 100%;
    height: 100%;
}

/* tab 导航 */

.tab-bar {
    width: 100%;
    height: 78rpx;
    color: #fff;
    font-size: 28rpx;
    background-color: #39b6a3;
}

.tab-box {
    width: 60%;
    height: 78%;
    margin: 0 auto;
    border: 1rpx solid #fff;
    border-radius: 10rpx;
    display: flex;
}

.tab-box-item {
    flex: 1;
    padding-top: 3rpx;
    font-size: 34rpx;
    text-align: center;
}

.b-lr {
    border-left: 1rpx solid #fff;
    border-right: 1rpx solid #fff;
}

.tab-active {
    color: #39b6a3;
    background-color: #fff;
}

/* nav 导航 */

.nav-bar {
    width: 100%;
    height: auto;
}

.nav-box {
    width: 80%;
    height: 78rpx;
    line-height: 70rpx;
    margin: 0 auto;
    display: flex;
}

.nav-box-item {
    flex: 1;
    color: #333;
    padding-top: 4rpx;
    font-size: 30rpx;
    text-align: center;
    position: relative;
}

.nav-active-c {
    color: #39b6a3;
}

.nav-active-c::after {
    content: '';
    display: inline-block;
    width: 120rpx;
    height: 4rpx;
    position: absolute;
    bottom: 5rpx;
    left: 50%;
    transform: translateX(-50%);
    background-color: #39b6a3;
}

/* 滚动区域 */

.scroll-view {
    position: absolute;
    top: 78rpx;
    bottom: 100rpx;
    width: 100%;
    overflow: hidden;
}

/* 广告栏：轮播图 */

.swiper-box {
    width: 100%;
    height: 260rpx;
    overflow: hidden;
}

.swiper-box image, .swiper-img {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

/* 列表内容 */

.data-list {
    width: 100%;
    height: auto;
    overflow: hidden;
}

.list-item {
    padding: 20rpx 3% 0;
    margin-bottom: 20rpx;
    height: 214rpx;
    overflow: hidden;
    border-top: 1rpx solid #ededed;
    display: flex;
}

.item-img {
    width: 164rpx;
    overflow: hidden;
    border-radius: 8rpx;
}

.item-img>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.item-info {
    flex: 1;
    padding-left: 16rpx;
    padding-right: 10rpx;
    overflow: hidden;
}

.info-name {
    width: 100%;
    font-size: 30rpx;
    color: #000;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.info-type {
    width: 100%;
    font-size: 24rpx;
    color: #999;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.info-desc {
    width: 100%;
    font-size: 24rpx;
    color: #666;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.item-right {
    width: 120rpx;
    position: relative;
}

.item-price {
    text-align: center;
    color: #f68650;
}

.price-int {
    font-size: 70rpx;
}

.price-float {
    font-size: 36rpx;
}

.item-btn {
    position: absolute;
    bottom: 0;
    left: 10%;
    width: 80%;
    height: 56rpx;
    line-height: 56rpx;
    border: 1rpx solid #39b6a3;
    border-radius: 16rpx;
    text-align: center;
    font-size: 30rpx;
    color: #39b6a3;
}

@import '../common/common.wxss';
