page {
    width: 100%;
    height: 100%;
}

.scroll-view {
    position: absolute;
    top: 0;
    bottom: 100rpx;
    width: 100%;
    overflow: hidden;
}

.options-item {
    padding: 10rpx 3%;
    height: 80rpx;
    display: flex;
    background: #fff;
    border-bottom: 1rpx solid #f1f1f1;
}

.icon {
    flex: 0 0 80rpx;
    height: 100%;
    text-align: center;
}

.icon>image {
    width: 50rpx;
    height: 45rpx;
    vertical-align: middle;
}

.title {
    flex: 1;
    height: 100%;
    line-height: 80rpx;
    font-size: 30rpx;
    padding-left: 15rpx;
}

.arrow {
    flex: 0 0 30rpx;
    height: 100%;
    text-align: center;
}

.arrow>image {
    width: 20rpx;
    height: 45rpx;
    vertical-align: middle;
}