page {
    width: 100%;
    height: 100%;
}

.scroll-view {
    position: absolute;
    top: 0;
    bottom: 100rpx;
    width: 100%;
    overflow: hidden;
}

.detail-info {
    padding: 30rpx 3% 16rpx;
    height: 241rpx;
    background-color: #39b6a3;
    display: flex;
}

.info-left {
    flex: 1;
    color: #fff;
    margin-left: 50rpx;
    position: relative;
}

.info-type {
    display: inline-block;
    width: auto;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 20rpx;
    color: #fff;
    margin-bottom: -6rpx;
}

.type-left {
    float: left;
    padding: 0 8rpx;
    background-color: rgba(0, 0, 0, 0.2);
}

.type-right {
    float: left;
    padding: 0 8rpx;
    border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.info-left-name {
    font-size: 34rpx;
    margin-bottom: 30rpx;
}

.info-left-txt {
    font-size: 24rpx;
}

.info-right {
    width: 240rpx;
    height: 100%;
    text-align: center;
}

.info-right>image {
    width: 164rpx;
    height: 241rpx;
    vertical-align: middle;
    box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
}

/* line */

.the-line {
    padding: 16rpx 34rpx;
    line-height: 60rpx;
    height: auto;
    overflow: hidden;
    border-bottom: 1rpx solid #ededed;
    display: flex;
}

.the-line-title {
    width: auto;
    font-size: 30rpx;
    color: #999;
}

.the-line-desc {
    flex: 1;
    text-align: right;
    font-size: 26rpx;
    color: #333;
}

.price {
    color: #f68650;
    line-height: 50rpx;
    padding-top: 10rpx;
}

.s-big {
    font-size: 46rpx;
}

.bt-10 {
    border-top: 10rpx solid #f5f5f5;
}

/* 购票须知 */

.the-con {
    width: 88%;
    margin: 30rpx auto;
    height: auto;
    overflow: hidden;
    font-size: 26rpx;
    color: #999;
}

/* 立即预约 */

.order-confirm {
    position: absolute;
    bottom: 0;
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    overflow: hidden;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
}

@import '../common/common.wxss';