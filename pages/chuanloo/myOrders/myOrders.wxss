page {
    width: 100%;
    height: 100%;
}

.my-card {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    overflow: hidden;
    box-sizing: content-box;
    position: relative;
}

/* 导航 */

.nav-bar {
    width: 100%;
    height: 68rpx;
    line-height: 68rpx;
    background-color: #fff;
    display: flex;
}

.nav-item {
    flex: 1;
    font-size: 30rpx;
    color: #333;
    text-align: center;
    position: relative;
}

.nav-item-big {
    width: 240rpx;
    font-size: 30rpx;
    color: #333;
    text-align: center;
    position: relative;
}

.nav-active {
    color: #39b6a3;
}

.nav-line {
    position: absolute;
    bottom: 0;
    left: 25%;
    display: block;
    width: 50%;
    height: 4rpx;
    background-color: #39b6a3;
}

/* 列表 */

.scroll-view {
    position: absolute;
    top: 80rpx;
    bottom: 0;
    width: 100%;
}

.list-item {
    margin: 40rpx 30rpx;
    height: auto;
    overflow: hidden;
    background-color: #fff;
    border-radius: 16rpx;
}

.item-color-bar {
    width: 100%;
    height: 60rpx;
    margin-bottom: 30rpx;
    background-color: #f68650;
}

.item-info {
    width: 80%;
    height: auto;
    margin: 0 auto;
    overflow: hidden;
    display: flex;
}

.item-info-item {
    flex: 1;
    line-height: 50rpx;
    text-align: center;
}

.info-black {
    font-size: 36rpx;
    color: #000;
}

.info-gray {
    font-size: 30rpx;
    color: #999;
}

.info-cancel {
    line-height: 100rpx;
    font-size: 36rpx;
    color: #999;
}

/* line */

.the-line-box {
    padding: 24rpx 34rpx;
}

.the-line-small {
    line-height: 58rpx;
    height: auto;
    overflow: hidden;
    display: flex;
}

.the-line {
    padding: 24rpx 34rpx;
    line-height: 60rpx;
    height: auto;
    overflow: hidden;
    display: flex;
}

.the-line-title {
    width: auto;
    font-size: 30rpx;
    color: #333;
}

.the-line-desc {
    flex: 1;
    text-align: right;
    font-size: 26rpx;
    color: #999;
    position: relative;
}

.desc-arrow {
    padding-right: 40rpx;
}

.desc-arrow::after {
    content: " ";
    display: inline-block;
    height: 20rpx;
    width: 20rpx;
    border-width: 2rpx 2rpx 0 0;
    border-color: #999;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    margin-top: -10rpx;
    position: absolute;
    top: 50%;
    right: 4rpx;
}

.price {
    color: #f68650;
    font-size: 34rpx;
    line-height: 50rpx;
    padding-top: 8rpx;
}

.mt-30 {
    margin-top: 30rpx;
}

.b-t {
    border-top: 1rpx solid #ededed;
}

/* 按钮 */

.the-btns {
    padding: 24rpx 34rpx;
    height: auto;
    overflow: hidden;
}

.close-num {
    float: right;
    padding: 0 24rpx;
    line-height: 68rpx;
    font-size: 30rpx;
    color: #fff;
    background-color: #39b6a3;
    border-radius: 16rpx;
}

/* 字体颜色 */

.gray {
    color: #999;
}
