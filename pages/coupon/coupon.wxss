page {
    width: 100%;
    height: 100%;
}

.yaoyao {
    background-color: #d52848;
}

.img-txt {
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    margin: 5% auto 2%;
}

.img-title {
    text-align: center;
    padding-top: 5%;
}

.img-shack {
    text-align: center;
}

.img-title>image {
    width: 439rpx;
    height: 194rpx;
    vertical-align: middle;
}

.img-shack>image {
    width: 540rpx;
    height: 546rpx;
    vertical-align: middle;
}

.mask-box {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.6);
}

.no-box-close {
    position: absolute;
    top: 18%;
    right: 20%;
    width: 50rpx;
    height: 50rpx;
}

.no-box {
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: auto;
    text-align: center;
}

.no-box>image {
    width: 495rpx;
    height: 496rpx;
    vertical-align: middle;
}

.has-box {
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: auto;
}

.has-box-item {
    width: 94%;
    margin: 16rpx auto;
    height: 240rpx;
    overflow: hidden;
    position: relative;
}

.has-box-item>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.has-box-txt {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
}

.has-txt-con {
    padding: 16rpx 24rpx;
    color: #fff;
    display: flex;
    height: 120rpx;
    margin-bottom: 20rpx;
}

.has-txt-con-l {
    flex: 1;
    text-align: center;
}

.has-txt-con-r {
    flex: 1;
    padding-left: 30rpx;
}

.has-txt-con-line {
    width: 1rpx;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.5);
}

.money-icon {
    font-size: 30rpx;
}

.money-num {
    font-size: 100rpx;
}

.goupiao {
    padding-top: 18rpx;
    font-size: 30rpx;
}

.yhq {
    font-size: 40rpx;
}

.has-txt-btn {
    width: 40%;
    margin: 0 auto;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 26rpx;
    font-weight: 600;
    color: #d52848;
    background-color: #FFF100;
    border-radius: 10rpx;
}
