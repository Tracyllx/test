page {
    width: 100%;
    height: 100%;
}

.box {
    width: 100%;
    height: auto;
    margin: 30% auto 10%;
    overflow: hidden;
    text-align: center;
}

.box>image {
    width: 100rpx;
    height: 100rpx;
    vertical-align: middle;
}

.box>.txt {
    padding-top: 50rpx;
    font-size: 30rpx;
    color: #333;
}

.btn-item {
    width: 80%;
    margin: 40rpx auto;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    text-align: center;
    border-radius: 80rpx;
}

.btn-b {
    color: #fff;
    background-color: #39b6a3;
}

.btn-w {
    color: #39b6a3;
    background-color: #fff;
    border: 1rpx solid #39b6a3;
}