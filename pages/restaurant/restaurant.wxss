page {
    width: 100%;
    height: 100%;
}

.btn-box {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden;
    font-size: 30rpx;
    text-align: center;
    color: #fff;
    background-color: #39b6a3;
}

.line-item {
    padding: 16rpx 24rpx;
    height: 68rpx;
    line-height: 68rpx;
    overflow: hidden;
    border-bottom: 1rpx solid #f1f1f1;
    display: flex;
}

.line-title {
    font-size: 28rpx;
    color: #333;
}

.line-content {
    flex: 1;
    display: flex;
}

.radio-group {
    text-align: right;
}

.radio-label {
    font-size: 28rpx;
    color: #333;
    margin-right: 10rpx;
}

.input {
    flex: 1;
    padding: 0 10rpx;
}

.input>input {
    width: 100%;
    height: 100%;
    font-size: 28rpx;
    color: #333;
}

.no-b {
    border: 0;
}

.line-block {
    height: 10rpx;
    background-color: #F5F5F5;
}

.desc {
    font-size: 28rpx;
    color: #333;
}

.picker-bar-date {
    padding: 0 50rpx;
    font-size: 28rpx;
    color: #39b6a3;
}

.picker-bar {
    padding: 0 20rpx;
    font-size: 28rpx;
    color: #39b6a3;
}

.time-line {
    font-size: 40rpx;
    color: #39b6a3;
}

.mr-20 {
    margin-right: 20rpx;
}