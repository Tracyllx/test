page {
    width: 100%;
    height: 100%;
}

.info {
    padding: 24rpx 30rpx;
    height: 140rpx;
    overflow: hidden;
    display: flex;
}

.info-img {
    width: 220rpx;
    height: 140rpx;
    overflow: hidden;
    border-radius: 16rpx;
}

.info-img>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.info-con {
    flex: 1;
    padding-left: 20rpx;
}

.info-title {
    line-height: 58rpx;
    font-size: 30rpx;
    color: #333;
}

.info-desc {
    font-size: 28rpx;
    color: #666;
}

.line-block {
    height: 10rpx;
    background-color: #eee;
}

.detail {
    padding: 0 24rpx;
    height: auto;
    overflow: hidden;
}

.detail-desc {
    padding: 20rpx 24rpx;
    font-size: 28rpx;
    display: flex;
    border-bottom: 1rpx solid #eee;
}

.detail-desc-item {
    flex: 1;
    text-align: center;
}

.flex-title {
    flex: 1;
    line-height: 52rpx;
}

.flex-desc {
    width: auto;
    line-height: 52rpx;
}

.c-3 {
    color: #333;
}

.c-6 {
    color: #666;
}

.c-9 {
    color: #999;
}
