page {
    width: 100%;
    height: 100%;
}

image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.box {
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: auto;
    overflow: hidden;
}

button {
    width: 86%;
    height: 280rpx;
    margin: 40rpx auto;
    color: #fff;
}

button::after,
button::before {
    border: 0;
}

.call {
    padding-top: 70rpx;
}

.call>image {
    width: 117rpx;
    height: 79.3rpx;
    vertical-align: middle;
}

.online {
    padding-top: 60rpx;
}

.online>image {
    width: 114.3rpx;
    height: 117rpx;
    vertical-align: middle;
}

.txt {
    font-size: 30rpx;
    color: #fff;
}

.mask {
    z-index: 3;
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.3);
}

.phone {
    z-index: 4;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80%;
    background-color: #fff;
    font-size: 30rpx;
    color: #333;
    height: 78rpx;
    line-height: 78rpx;
    text-align: center;
    border-radius: 78rpx;
}