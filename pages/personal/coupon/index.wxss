page {
    width: 100%;
    height: 100%;
}

.coupon-scroll {
    width: 100%;
    height: 100%;
}

.has-box-item {
    width: 94%;
    margin: 16rpx auto;
    height: 260rpx;
    overflow: hidden;
    position: relative;
}

.has-box-item>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.has-txt-con {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    height: auto;
    display: flex;
}

.has-txt-con-l {
    flex: 1;
    color: #fff;
    text-align: center;
    position: relative;
}

.has-txt-con-r {
    flex: 1;
    color: #fff;
    padding-left: 24rpx;
    border-left: 1rpx solid rgba(255, 255, 255, 0.5);
}

.money-icon {
    position: absolute;
    top: 30rpx;
    left: 12%;
    font-size: 30rpx;
}

.money-num {
    font-size: 100rpx;
    font-weight: 600;
}

.gp-yhq {
    position: absolute;
    bottom: -10rpx;
    left: 50%;
    transform: translate(-50%, 0);
    font-size: 28rpx;
}

.guize {
    padding-top: 18rpx;
    font-size: 26rpx;
}

.man {
    padding-top: 18rpx;
    font-size: 35rpx;
}

.yhq {
    font-size: 60rpx;
}

.deff-bar {
    position: absolute;
    bottom: 6rpx;
    right: 24rpx;
    text-align: right;
    font-size: 26rpx;
    color: #fff;
}
