page {
    width: 100%;
    height: 100%;
}

.detail-info {
    width: 100%;
    height: 300rpx;
    overflow: hidden;
    display: flex;
}

.detail-info>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.info-left {
    flex: 1;
    color: #fff;
    margin-left: 50rpx;
    position: relative;
}

.info-type {
    display: inline-block;
    width: auto;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 20rpx;
    color: #fff;
    margin-bottom: -6rpx;
}

.type-left {
    float: left;
    padding: 0 8rpx;
    background-color: rgba(0, 0, 0, 0.2);
}

.type-right {
    float: left;
    padding: 0 8rpx;
    border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.info-left-name {
    font-size: 34rpx;
    margin-bottom: 30rpx;
}

.info-left-txt {
    font-size: 24rpx;
}

.info-right {
    width: 240rpx;
    height: 100%;
    text-align: center;
}

.info-right>image {
    width: 164rpx;
    height: 241rpx;
    vertical-align: middle;
    box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
}

/* 时间轴 */

.time-tab {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 10rpx solid #f5f5f5;
    display: flex;
}

.time-tab-item {
    flex: 1;
    height: 100%;
    color: #333;
    font-size: 24rpx;
    text-align: center;
    position: relative;
}

.time-tab-acitve {
    color: #39b6a3;
}

.time-tab-acitve::after {
    content: '';
    display: inline-block;
    width: 80%;
    height: 4rpx;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    background-color: #39b6a3;
}

/* 列表 */

.scroll-view {
    position: absolute;
    top: 356rpx;
    bottom: 0;
    width: 100%;
    overflow: hidden;
}

.list-item {
    height: auto;
    padding: 26rpx 3%;
    border-bottom: 1rpx solid #ededed;
    display: flex;
}

.list-item-box {
    flex: 1;
}

.list-item-yuyue {
    width: 120rpx;
    position: relative;
}

.yuyue {
    position: absolute;
    bottom: 0;
    left: 10%;
    width: 80%;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 16rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background-color: #39b6a3;
}

.list-item-line {
    width: 100%;
    display: flex;
}

.list-item-1 {
    width: 160rpx;
    text-align: center;
}

.list-item-2 {
    flex: 1;
    text-align: center;
    margin-left: 24rpx;
    margin-right: 16rpx;
}

.list-item-3 {
    width: 112rpx;
    text-align: center;
    margin-right: 10rpx;
}

.lh-2 {
    line-height: 92rpx;
}

/* 字体大小 */

.s-big {
    font-size: 60rpx;
}

.s-small {
    font-size: 30rpx;
}

/* 字体颜色 */

.c-black {
    color: #333;
}

.c-gray {
    color: #999;
}

.c-color {
    color: #f68650;
}

.c-base {
    color: #39b6a3;
}

/* 取消排队 */

.cancel-yuye {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden;
    font-size: 30rpx;
    text-align: center;
    color: #fff;
    background-color: #39b6a3;
}

/* 排队信息 */

.yuyue-info {
    width: 92%;
    height: auto;
    margin: 30rpx auto;
    overflow: hidden;
    border-radius: 10rpx;
    background-color: #fff;
}

.yuyue-item {
    padding: 16rpx 24rpx;
    line-height: 68rpx;
    font-size: 28rpx;
    border-bottom: 1rpx solid #f5f5f5;
    display: flex;
}

.yuyue-item-title {
    flex: 1;
}

.no-b {
    border: 0;
}

.num-tip {
    font-size: 48rpx;
    line-height: 58rpx;
    padding-left: 10rpx;
    padding-right: 6rpx;
}

.num-block {
    margin-left: 8rpx;
    padding: 10rpx 20rpx;
    color: #fff;
    border-radius: 10rpx;
    background-color: #39b6a3;
}
