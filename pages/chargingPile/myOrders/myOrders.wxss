page {
    width: 100%;
    height: 100%;
}

.the-container {
    width: 100%;
    height: 100%;
    background-color: #fff;
    overflow: hidden;
    box-sizing: content-box;
    position: relative;
}

/* 底部 */

.tab-bar {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 99rpx;
    overflow: hidden;
    border-top: 1rpx solid #ededed;
    display: flex;
}

.tab-item {
    flex: 1;
    text-align: center;
    font-size: 26rpx;
    font-family: "宋体";
    color: #000;
}

.tab-item>image {
    display: block;
    margin: 0 auto;
    margin-bottom: 6rpx;
}

.tab-acitve {
    color: #39b6a3;
}

/* 导航 */

.nav-bar {
    width: 100%;
    height: 68rpx;
    line-height: 68rpx;
    background-color: #fff;
    border-bottom: 10rpx solid #f5f5f5;
    display: flex;
}

.nav-item {
    flex: 1;
    font-size: 30rpx;
    color: #333;
    text-align: center;
    position: relative;
}

.nav-active {
    color: #39b6a3;
}

.nav-line {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translate(-50%, 0%);
    display: block;
    width: 46%;
    height: 4rpx;
    background-color: #39b6a3;
}

.nav-line-0 {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translate(-50%, 0%);
    display: block;
    width: 30%;
    height: 4rpx;
    background-color: #39b6a3;
}

/* 列表 */

.scroll-view {
    position: absolute;
    top: 78rpx;
    bottom: 100rpx;
    width: 100%;
}

.list-item {
    padding: 16rpx 24rpx;
    height: auto;
    overflow: hidden;
    border-bottom: 16rpx solid #f5f5f5;
}

.item-line {
    width: 100%;
    height: auto;
    overflow: hidden;
    display: flex;
}

.item-time {
    padding-bottom: 10rpx;
    margin-bottom: 10rpx;
    border-bottom: 1rpx solid #ededed;
}

.item-line-l {
    flex: 1;
}

.item-line-r {
    width: auto;
}

.s-big {
    font-size: 30rpx;
}

.s-small {
    font-size: 26rpx;
}

.c-black {
    color: #333;
}

.c-gray {
    color: #999;
}

.c-base {
    color: #39b6a3;
}

