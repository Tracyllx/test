page {
    width: 100%;
    height: 100%;
}

.con-btn {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: auto;
    border-top: 1rpx solid #eee;
    display: flex;
    overflow: hidden;
}

.con-btn-item {
    height: 99rpx;
    line-height: 99rpx;
    flex: 1;
    text-align: center;
}

.con-btn-total {
    font-size: 26rpx;
    color: #39b6a3;
}

.total-num {
    font-size: 50rpx;
    font-weight: 600;
}

.con-btn-conf {
    background-color: #39b6a3;
    font-size: 34rpx;
    color: #fff;
}

.user-info {
    padding: 16rpx 24rpx;
    height: 68rpx;
    line-height: 68rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 30rpx;
    color: #333;
}

.fr {
    float: right;
}

.detail-box {
    padding: 16rpx 24rpx;
    height: 240rpx;
    overflow: hidden;
    display: flex;
}

.detail-img {
    width: 240rpx;
    text-align: center;
    background-color: #eee;
}

.detail-img>image {
    vertical-align: middle;
}

.detail-info {
    flex: 1;
    padding-top: 30rpx;
    padding-left: 20rpx;
}

.info-name {
    font-size: 30rpx;
    color: #333;
}

.info-txt {
    font-size: 26rpx;
    color: #666;
}

.desc-title {
    padding: 16rpx 24rpx 0;
    font-size: 30rpx;
    color: #666;
}

.desc-con {
    padding: 16rpx 24rpx;
    font-size: 26rpx;
    color: #999;
}

.price-bar {
    font-size: 26rpx;
    color: #FF5A19;
}

.line {
    height: 16rpx;
    background-color: #eee;
}