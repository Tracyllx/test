page {
    width: 100%;
    height: 100%;
}

.btn-bar1 {
    width: 88%;
    margin: 0 auto;
    height: 90rpx;
    overflow: hidden;
    line-height: 90rpx;
    font-size: 34rpx;
    letter-spacing: 3rpx;
    text-align: center;
    color: #fff;
    border-radius: 90rpx;
    background-color: #39b6a3;
}

.show-big {
    position: absolute;
    top: 8%;
    left: 8%;
    right: 8%;
    bottom: 25%;
    padding: 50rpx 0;
    overflow: hidden;
    background-color: #fff;
    box-shadow: 6rpx 4rpx 15rpx rgba(0, 0, 0, 0.2);
}

.show-b-img {
    text-align: center;
    height: 50%;
}

.show-b-img>image {
    vertical-align: middle;
}

.show-b-name {
    padding-bottom: 3%;
    text-align: center;
    font-size: 34rpx;
    color: #333;
}

.show-b-txt {
    text-align: center;
    font-size: 28rpx;
    color: #666;
}

.show-b-txt-s {
    margin: 8% auto 4%;
    text-align: center;
    font-size: 26rpx;
    color: #999;
}

.show-small {
    position: absolute;
    bottom: 3%;
    left: 3%;
    right: 3%;
    height: 15%;
    display: flex;
}

.show-s-item {
    flex: 1;
    margin: 0 8rpx;
    border: 1rpx solid #e5e5e5;
    text-align: center;
    transition: transform 0.8s;
    -moz-transition: -moz-transform 0.8s;
    -webkit-transition: -webkit-transform 0.8s;
    -o-transition: -o-transform 0.8s;
}

.show-s-item>image {
    vertical-align: middle;
}

.show-s-item.active {
    border: 1rpx solid #39b6a3;
    transform: scale(1.1, 1.1);
    -ms-transform: scale(1.1, 1.1); /* IE 9 */
    -moz-transform: scale(1.1, 1.1); /* Firefox */
    -webkit-transform: scale(1.1, 1.1); /* Safari and Chrome */
    -o-transform: scale(1.1, 1.1); /* Opera */
}
